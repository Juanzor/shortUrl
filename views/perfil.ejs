<%- include('partials/head', {title: "Perfil"}); %> <%- include('partials/navbar'); %>

<div class="my-4 text-center">
    <h1><%= user.userName %></h1>
    <p>Editar perfil</p>
</div>

<% if (imagen) { %>

<div class="my-2 text-center ">
    <img src="/images/<%= imagen %>" alt="" class="rounded-circle" />
</div>

<% } else { %>
<div class="my-2 text-center ">
    <img src="/images/default.png" alt="" class="rounded-circle" />
</div>

<% } %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <% mensajes.forEach(m => { %>
        <div class="alert alert-dark mb-2"><%= m.msg %></div>

        <% }) %>

        <form class="my-3" action="/perfil?_csrf=<%= csrfToken %>" method="POST" enctype="multipart/form-data">
            <input class="form-control form-control-sm" id="img" type="file" name="img" />
            <button class="btn btn-dark my-3">Cambiar imagen</button>
        </form>
    </div>
</div>
